@model IEnumerable<TodoTaskResponse>
@{
    ViewData["Title"] = "All Tasks";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        @foreach (var todo in Model)
        {
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3" style="max-width: 20rem; height: 25rem;">
                    <div class="card-header">@todo.Title</div>
                    <div class="card-body" style="overflow-y: auto;">
                        <h4 class="card-title">Keep it Stupid Simple</h4>
                        <hr />
                        <p class="card-text">@todo.Description</p>
                        <hr />
                        <a type="button" asp-action="Details" asp-route-id="@todo.Id" class="btn btn-primary">Details</a>
                        <a type="button" asp-action="ChangeStatus" asp-route-id="@todo.Id" class="btn btn-danger">Change Status</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
