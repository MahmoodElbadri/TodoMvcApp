@model IEnumerable<TodoTaskResponse>
@{
    ViewData["Title"] = "All Tasks";
}

<h1>Index</h1>

<div class="container">
    <div class="row">
        @foreach (var todo in Model)
        {
            <div class="col-md-4">
                <div class="card text-white bg-success mb-3" style="max-width: 20rem; height: 30rem;">
                    <div class="card-header">@todo.Title</div>
                    <div class="card-body d-flex flex-column" style="overflow-y: auto;">
                        <!-- Image space -->
                        <div class="card-img-container mb-3">
                            <img src="~/images/@todo.ImageUrl" class="card-img-top" alt="Todo Image" style="height: 120px; object-fit: cover;">
                        </div>
                        <!-- Title and description -->
                        <h4 class="card-title">Keep it Stupid Simple</h4>
                        <hr />
                        <p class="card-text">@todo.Description</p>
                        <hr />
                        <div class="mt-auto">
                            <a type="button" asp-action="Details" asp-route-id="@todo.Id" class="btn btn-primary w-100">Details</a>
                            <a type="button" asp-action="ChangeStatus" asp-route-id="@todo.Id" class="btn btn-danger w-100 mt-2">Change Status</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
